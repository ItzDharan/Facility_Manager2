@model FacilityManager.Models.Department

@{
    ViewData["Title"] = "Create";
}


<img class="mx-auto d-block" src="~/lib/icons/004-organization.svg" width="50" height="60" />
<h4 class="text-center">Add Department</h4>
<hr />
<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @* <div class="form-group">
                <label asp-for="Company" class="control-label"></label>
                <select asp-for="Company" class="form-control" asp-items="ViewBag.Companies"></select>
            </div>*@
                <div class="text-center mx-auto my-1">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
            <div class="text-center">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
    </div>

    

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
