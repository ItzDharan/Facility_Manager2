@model FacilityManager.Models.ContractViewModel

@{
    ViewData["Title"] = "Create";
}

<img class="mx-auto d-block" src="~/lib/icons/009-contract.svg" width="50" height="60" />
<h4 class="text-center">Add Contract</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contractor1" class="control-label"></label>
                    <select asp-for="Contractor1" class="form-control" asp-items="ViewBag.Contractors"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Contractor2" class="control-label"></label>
                    <select asp-for="Contractor2" class="form-control" asp-items="ViewBag.Contractors"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StartingDate" class="control-label"></label>
                    <input asp-for="StartingDate" class="form-control" />
                    <span asp-validation-for="StartingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndingDate" class="control-label"></label>
                    <input asp-for="EndingDate" class="form-control" />
                    <span asp-validation-for="EndingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AwardAmount" class="control-label"></label>
                    <input asp-for="AwardAmount" class="form-control" />
                    <span asp-validation-for="AwardAmount" class="text-danger"></span>
                </div>
                <div class="text-center mx-auto my-1">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
            <div class="text-center">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
    </div>

   

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
