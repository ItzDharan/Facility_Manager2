@model FacilityManager.Models.ContractorViewModel

@{
    ViewData["Title"] = "Create";
}

<img class="mx-auto d-block" src="~/lib/icons/010-contractor.svg" width="50" height="60" />
<h4 class="text-center">Add Contractor</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CompanyId" class="control-label"></label>
                        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companies"></select>
                    </div>
                    <div class="text-center mx-auto my-1">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
                <div class="text-center">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
    

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
