@model IEnumerable<FacilityManager.Models.WorkOrder>

@{ ViewData["Title"] = "Index"; }

<div class="container-fluid">
<img class="mx-auto d-block" src="~/lib/icons/001-to-do-list.svg" width="50" height="60" />
<h2 class="text-center">Work Orders</h2>
<p class="text-center">
    <a asp-action="Create">Create new <img class="mx-auto" src="~/lib/icons/add.svg" width="20" height="20" /></a>
</p>
<table id="table" class="table">
    <thead>
        <tr>

             <th>
          @Html.DisplayNameFor(model => model.Id)
           </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building)
            </th>
            <th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Cost)</td>
            <td>@Html.DisplayFor(model => item.Building.Name)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"> <img class="mx-auto" src="~/lib/icons/001-pencil.svg" width="20" height="20" /></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><img class="mx-auto" src="~/lib/icons/004-info-1.svg" width="20" height="20" /></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><img class="mx-auto" src="~/lib/icons/005-garbage.svg" width="20" height="20" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<script type="text/javascript">

    $(document).ready(function () {

        $('#table').DataTable();

    });</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}

